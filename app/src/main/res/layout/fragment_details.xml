<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/font"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.details.DetailsFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tbDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Breaking news"
        app:titleCentered="true"
        app:titleTextColor="@color/primaryBlue"
        app:navigationIcon="@drawable/ic_back"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/primaryBlue"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tbDetails">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Apple's 2021 App Store Awards highlight 'connection'" />

            <TextView
                android:id="@+id/tvInThisArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                tools:text="In this article: LumaFusion, Craft, news, gear, Carrot Weather, Space Marshals 3, gaming, Dazn, League of Legends: Wild Rift, Myst, Apple, Among Us, Canva, Toca Life World, Penaut, MARVEL Future Revolution, App Store Awards. Bumble, Fantasian" />

            <ImageView
                android:id="@+id/ivDetails"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginTop="16dp"
                tools:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                tools:text="Last year, Apple focused on quarantine life for its App Store Awards. For 2021, it's continuing that concept with a focus on connection as its trend of the year â€” basically, things that brought us together even though we're still dealing with a global pandemic. That trend award was bestowed upon five apps, including familiar names like Bumble and Among Us!. But the niche winners are even more interesting: there's EatOkra, an app that helps you find black-owned restaurants; Canva, which helps anyone create pro-grade designs; and Peanut, a social network focused on connecting women to find support throughout major life events." />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>