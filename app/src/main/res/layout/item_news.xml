<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/list_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <ImageView
        android:id="@+id/ivListItem"
        android:layout_width="111dp"
        android:layout_height="74dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/tvNameList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/name"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/ivListItem"
        app:layout_constraintStart_toStartOf="@id/ivListItem"
        app:layout_constraintTop_toBottomOf="@id/ivListItem"
        tools:text="Devindra Hardawar" />


    <TextView
        android:id="@+id/tvDateList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/light_gray"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/ivListItem"
        app:layout_constraintStart_toStartOf="@id/ivListItem"
        app:layout_constraintTop_toBottomOf="@id/tvNameList"
        tools:text="2021-12-02T08:01:31Z" />

    <TextView
        android:id="@+id/tvTitleList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivListItem"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Apple's 2021 App Store Awards highlight 'connection'" />

    <TextView
        android:id="@+id/tvDescriptionList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivListItem"
        app:layout_constraintTop_toBottomOf="@id/tvTitleList"
        tools:text="Last year, Apple focused on quarantine life for its App Store Awards. For 2021. Last year, Apple focused on quarantine life " />


</androidx.constraintlayout.widget.ConstraintLayout>